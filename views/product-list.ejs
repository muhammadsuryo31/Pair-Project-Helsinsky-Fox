<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/style') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include("./partials/navbar") %>
    <h1>Active Production</h1>
    <table>
        <thead>
            <tr>
                <th>No</th>
                <th>Product</th>
                <th>Type</th>
                <th>Operator Assigned to Job</th>
                <th colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let a = 0; a < data.length; a++) { %>
                <tr>
                    <td><%= a+1 %></td>
                    <td><%=data[a].name %></td>
                    <td><%=data[a].type %></td>
                    <td><%= data[a].Operator.name %></td>
                    <td><a href="/products/detail/<%= data[a].id %>">Raw Material Detail</a></td>
                    <td><a href="/products/edit/<%= data[a].id %>">Edit Detail</a></td>
                    <td><a href="/products/done/<%= data[a].id %>">Mark as done</a></td>
                </tr>
            <% } %>
            <tr>
                <td colspan="7"><a href="/products/add">Add Product</a></td>
            </tr>
        </tbody>
    </table>
</body>
</html>